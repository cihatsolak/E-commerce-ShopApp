@model ProductModel

@Html.HiddenFor(x => x.Id)

<div class="form-group row">
    <label asp-for="Name" class="col-md-2 col-form-label">Ürün Adı</label>
    <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="ImageUrl" class="col-md-2 col-form-label">Ürün Görseli</label>
    <div class="col-md-10">
        @if (Model != null)
        {
            <input type="hidden" name="ImageUrl" value="@Model.ImageUrl">
            <img src="~/img/@Model.ImageUrl" alt="@Model.Name" style="max-height:300px; max-width:200px;" />
        }
        <input type="file" name="file" width="80" />
    </div>
</div>

<div class="form-group row">
    <label asp-for="Description" class="col-md-2 col-form-label">Ürün Açıklaması</label>
    <div class="col-md-10">
        <textarea id="editor" asp-for="Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="Price" class="col-md-2 col-form-label">Ürün Fiyatı</label>
    <div class="col-md-10">
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-10 offset-md-2">
        <button type="submit" value="Kaydet" class="btn btn-primary">Kaydet</button>
    </div>
</div>

