@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h1>Şifremi Unuttum?</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="mb-3">
                <span class="text-danger">@ViewBag.ErrorMessage</span>
            </div>
        }
        <form asp-controller="Account" asp-action="ForgotPassword" method="post">

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Kullanıcı Adı</label>
                <div class="col-md-10">
                    <input type="email" name="email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" value="Şifre Sıfırlama Talebi Gönder" class="btn btn-primary">Şifre Sıfırlama Talebi Gönder</button>
                </div>
            </div>
        </form>

    </div>
</div>


